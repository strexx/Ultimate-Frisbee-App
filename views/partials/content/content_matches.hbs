<article class="matches__item" id="match-{{id}}">
    <button class="favorite__btn" name="favorite" value="{{id}}">
        <svg class="favorite__btn__svg" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="510px" height="510px" viewBox="0 0 510 510" style="enable-background:new 0 0 510 510;" xml:space="preserve">
            <g>
                <g id="star">
                    <polygon class="favorite__btn__svg__path" points="255,402.212 412.59,497.25 370.897,318.011 510,197.472 326.63,181.738 255,12.75 183.371,181.738 0,197.472
      			139.103,318.011 97.41,497.25 		" />
                </g>
            </g>
        </svg>
    </button>
    <a href="/match/{{id}}/" class="matches__item__link">
        <div class="matches__content__wrapper">
            <table class="matches__item__table">
                <tr class="matches__item__table__row">
                    <td class="matches__item__name"><span>{{team_1.short_name}}</span></td>
                    <td class="matches__item__score team_1_score_realtime">{{team_1_score}}</td>
                    <td><span class="queue_score_1 queue_label hidden"></span></td>
                </tr>
                <tr class="matches__item__table__row">
                    <td class="matches__item__name"><span>{{team_2.short_name}}</span></td>
                    <td class="matches__item__score team_2_score_realtime">{{team_2_score}}</td>
                    <td><span class="queue_score_2 queue_label hidden"></span></td>
                </tr>
            </table>
            <div class="matches__item__info">
                <p class="matches__item__info__time">{{start_time}}</p>
                <p class="matches__item__info__field">{{game_site.name}}</p>
            </div>
            <div class="arrow__wrapper">
                <svg class="matches__item__arrow__dropdown" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve">
                    <g>
                        <path style="fill:#6A6E7C;" d="M263.3,390.5c-4.2,4-10.9,3.9-14.9-0.3L2.9,136.2c-4-4.2-3.9-10.9,0.3-14.9s10.9-3.9,14.9,0.3
		l245.5,254c2,2,3,4.7,3,7.3C266.6,385.7,265.6,388.4,263.3,390.5z" />
                        <path style="fill:#6A6E7C;" d="M509.1,136.2l-245.4,254c-4,4.2-10.7,4.3-14.9,0.3s-4.3-10.7-0.3-14.9l245.5-254
		c4-4.2,10.7-4.3,14.9-0.3c2.1,2.1,3.2,4.8,3.2,7.6C512.1,131.5,511.1,134.2,509.1,136.2z" />
                    </g>
                </svg>

            </div>
        </div>
    </a>
    <div class="matches__item__morph__container">
        <div class="matches__item__morph__content">
          {{#if winner}}
  					<h1 class="match__item__final__label">This game has finished</h1>
  				{{/if}}
          	{{#unless winner}}
            <section class="matches__item__side matches__item__home">
                <h2>Home</h2>
                <div class="matches__item__buttons matches__item__home__buttons">
                    <button class="matches__item__team__button matches__item__team__button__minus" name="team_home_minus" id="team__home__minus" data-id="{{id}}">-</button>
                    <button class="matches__item__team__button matches__item__team__button__plus" name="team__home__plus" id="team__home__plus" data-id="{{id}}">+</button>
                </div>
            </section>
            <section class="matches__item__side matches__item__away">
                <h2>Away</h2>
                <div class="matches__item__buttons matches__item__away__buttons">
                    <button class="matches__item__team__button matches__item__team__button__minus" data-id="{{id}}" name="team_away_minus" id="team__away__minus">-</button>
                    <button class="matches__item__team__button matches__item__team__button__plus" data-id="{{id}}" name="team__away__plus" id="team__away__plus">+</button>
                </div>
            </section>
            {{/unless}}
            <a href="/match/{{id}}/" class="more__info">
                <svg class="info__svg" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="612px" height="612px" viewBox="0 0 612 612" style="enable-background:new 0 0 612 612;" xml:space="preserve">
                    <g>
                        <g id="Right">
                            <g>
                                <path class="information__icon" d="M277.58,179.679l-0.057,0.077c-5.125-4.705-11.857-7.631-19.335-7.631c-15.835,0-28.688,12.852-28.688,28.688
				c0,8.377,3.634,15.835,9.352,21.076l-0.057,0.077L330.48,306l-91.686,84.055l0.057,0.076c-5.718,5.221-9.352,12.68-9.352,21.057
				c0,15.836,12.852,28.688,28.688,28.688c7.478,0,14.21-2.926,19.335-7.611l0.057,0.076l114.75-105.188
				c5.91-5.451,9.295-13.101,9.295-21.152s-3.385-15.702-9.295-21.152L277.58,179.679z M306,0C137.012,0,0,137.012,0,306
				s137.012,306,306,306s306-137.012,306-306S474.988,0,306,0z M306,554.625C168.912,554.625,57.375,443.088,57.375,306
				S168.912,57.375,306,57.375S554.625,168.912,554.625,306S443.088,554.625,306,554.625z"></path>
                            </g>
                        </g>
                    </g>
                </svg>
            </a>
            <!-- Progress Bar -->
            <div class="progress"></div>
            <button class="cancelScoreMatches hidden"><i class="fa fa-ban" aria-hidden="true"></i></button>
        </div>
    </div>
</article>
<hr class="matches__divider" />
